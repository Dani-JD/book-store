<div class="row book-view">
    <% if (typeof books !== 'undefined') {%> 
        <% books.forEach((book)=>{%> 
            <div class="card col-auto me-3 mb-2" style="max-width: 18rem;" title="<%= book.title %>">
                <img src="/img/cover/<%=book.coverImage%>" style="width: 100%; height: 300px;object-fit: contain;" class="card-img-top" alt="Book Cover">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= book.title.length < 20 ? book.title : `${book.title.slice(0, 20)} ...`%>
                    </h5>
                    <p class="card-text">
                        <%= book.summary.length < 80 ? book.summary : `${book.summary.slice(0, 80)} ...`%>
                    </p>
                    <a href="/api/v1/books/<%= book._id%>" class="btn btn-primary">More info</a>
                </div>
            </div>
        <%}) %> 
    <% }%>
</div>